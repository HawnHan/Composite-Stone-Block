<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simply More Bridges (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<TerrainDef ParentName="HeavyBridgeMetalBase">
							<defName>HeavyBridgeBlockCompositeStone</defName>
							<label>Composite Stone bridge</label>
							<color>(189,189,189)</color>
							<costList>
								<BlockCompositeStone>8</BlockCompositeStone>
							</costList>
						</TerrainDef>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<TerrainDef ParentName="DeepWaterBridgeMetalBase">
							<defName>DeepWaterBridgeBlockCompositeStone</defName>
							<label>Composite Stone deep water bridge</label>
							<color>(189,189,189)</color>
							<costList>
								<Steel>5</Steel>
								<BlockCompositeStone>15</BlockCompositeStone>
							</costList>
						</TerrainDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>